<h1>Edit Entry</h1>

<form action="/entries/<%= @entry.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="place_id" value="<%= @entry.place_id %>">
  
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @entry.title %>">
  </p>

  <p>
    <label for="description">Description</label>
    <textarea name="description"><%= @entry.description %></textarea>
  </p>

  <p>
    <label for="posted_on">Date</label>
    <input type="date" name="posted_on" value="<%= @entry.posted_on %>">
  </p>

  <button>Save</button>
</form>

